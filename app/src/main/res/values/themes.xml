<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lazy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/color_main</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">18dp</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="android:background">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/pretendard_semibold</item>
    </style>
</resources>