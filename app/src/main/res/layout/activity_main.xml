    <data>
        <variable
            name="viewModel"
            type="com.nexters.presentation.base.BaseViewModel" />

    </data>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
